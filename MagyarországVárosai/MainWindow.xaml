<Window x:Class="MagyarországVárosai.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagyarországVárosai"
        mc:Ignorable="d"
        Title="Városok 1.0" 
        Background="Gainsboro"  
        WindowStartupLocation="CenterScreen" 
        FontSize="20" Height="600" Width="600"
        Icon="/varos.ico.ico">
    <Grid Margin="10">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Magyarország városai"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               FontSize="20"
               />
        <ListBox x:Name="lb_Varosok"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.RowSpan="2"
                 Height="500"
                 Margin="5" 
                 SelectionChanged="lb_Varosok_SelectionChanged"
                 />
        <Label
               Content="Keresés"
               Grid.Row="1"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Margin="-240 -155 0 0"
               Panel.ZIndex="0"
               Background="Gainsboro"
               Width="auto"/>
        <Border Background="Wheat"
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                Padding="5"
                VerticalAlignment="Center"
                Margin="0 0 5 0"
                Panel.ZIndex="0">
            <StackPanel Orientation="Vertical"
                        >
                <TextBox x:Name="tbx_kereses"
                         Margin="6"/>
                <Button Background="DarkGoldenrod"
                    x:Name="btn_keres"
                        Content="Keres"
                        Margin="6"
                        Click="btn_keres_Click"
                        FontWeight="Bold"
                        Foreground="White"/>
                <Button Background="#FF866209"
                    x:Name="btn_ujKeres"
                        Content="Új Keresés"
                        Margin="6"
                        Click="btn_ujKeres_Click"
                        FontWeight="Bold"
                        Foreground="White"/>
            </StackPanel >
        </Border>
        <Label Content="Városadatok"
               Grid.Row="2"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Margin="0 -210 0 0"
               Panel.ZIndex="1"
               Background="Gainsboro"
               Width="auto"
               />
        <Border Grid.Row="2"
                Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                Padding="5"
                VerticalAlignment="Center"
                Margin="0 0 5 0"
                Panel.ZIndex="0"
                >
            <StackPanel 
                
                VerticalAlignment="Center"
                    >

                <TextBlock x:Name="tbl_nev"
                       Margin="5"
                       Text="Város:"
                       FontSize="20"
                       FontWeight="SemiBold"/>
                <TextBlock x:Name="tbl_jaras"
                       Margin="5"
                       Text="Járás:"
                       FontSize="20"/>
                <TextBlock x:Name="tbl_kisterseg"
                       Margin="5"
                       Text="Kistérség:"
                       FontSize="20"
                       FontWeight="SemiBold"/>
                <TextBlock x:Name="tbl_nepesseg"
                       Margin="5"
                       Text="Népesség:"
                       FontSize="20"/>
                <TextBlock x:Name="tbl_terulet"
                       Margin="5"
                       Text="Terület:"
                       FontSize="20"
                       FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
